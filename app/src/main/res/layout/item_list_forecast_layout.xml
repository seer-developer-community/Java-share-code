<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_3"
        app:cardElevation="@dimen/dp_5">

        <RelativeLayout
            android:id="@+id/rela_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10">

            <RelativeLayout
                android:id="@+id/rela_tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="截止时间：2018.08.31  18:00"
                    android:textColor="#ff2a7ddf"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/select_agree_collect"
                    android:visibility="gone" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_ifnos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rela_tv_time"
                android:layout_marginTop="@dimen/dp_12"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="4"
                android:text="近日大盘走势整体向下，ETH于凌晨跌破500刀，预测6月14日13时整点是否会跌破490刀？"
                android:textColor="#ff444444"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/ll_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_ifnos"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_selection_one"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:background="@drawable/shape_gradient"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="是 (35%)"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_selection_two"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/shape_gradient"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="是 (35%)"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_selection_three"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/shape_gradient"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="否 (35%)"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_weight"
                android:layout_marginTop="@dimen/dp_15">

                <TextView
                    android:textSize="@dimen/sp_12"
                    android:id="@+id/tv_pfc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@mipmap/touzhu"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="32833 PFC" />

                <TextView
                    android:textSize="@dimen/sp_12"
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@mipmap/icon_num"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="328" />

                <TextView
                    android:textSize="@dimen/sp_12"
                    android:id="@+id/tv_tongji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@mipmap/icon_tongji"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="32%" />
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
