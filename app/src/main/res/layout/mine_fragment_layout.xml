<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_backgroud">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constrain_main_mine"
        android:layout_width="match_parent"
        android:layout_height="143sp"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:text="我的"
            android:textColor="#ff444444"
            android:textSize="19sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/constrain_main_mine" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_iv_avatar"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:background="@mipmap/icon_default_avatar"
            app:layout_constraintBottom_toTopOf="@+id/tv_create_wallet"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mine" />

        <TextView
            android:id="@+id/tv_create_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_17"
            android:gravity="center"
            android:text="创建钱包/导入钱包"
            android:textColor="#ff444444"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/constrain_main_mine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_wallet_manager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:drawableLeft="@mipmap/icon_wallet_manager"
        android:drawablePadding="12dp"
        android:drawableRight="@mipmap/icon_right"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:paddingRight="@dimen/dp_13"
        android:text="钱包管理"
        android:textColor="#444444"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constrain_main_mine" />

    <TextView
        android:id="@+id/tv_my_collect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/white"
        android:drawableLeft="@mipmap/icon_collect"
        android:drawablePadding="12dp"
        android:drawableRight="@mipmap/icon_right"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:paddingRight="@dimen/dp_13"
        android:text="我的收藏"
        android:textColor="#444444"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_wallet_manager" />

    <TextView
        android:id="@+id/tv_my_invite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="@color/white"
        android:drawableLeft="@mipmap/icon_invite"
        android:drawablePadding="12dp"
        android:drawableRight="@mipmap/icon_right"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:paddingRight="@dimen/dp_13"
        android:text="我的邀请"
        android:textColor="#444444"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_my_collect" />

    <TextView
        android:id="@+id/tv_call_us"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/white"
        android:drawableLeft="@mipmap/icon_phone"
        android:drawablePadding="12dp"
        android:drawableRight="@mipmap/icon_right"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:paddingRight="@dimen/dp_13"
        android:text="联系我们"
        android:textColor="#444444"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_my_invite" />

    <View
        android:layout_marginLeft="@dimen/dp_40"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_call_us" />

    <TextView
        android:id="@+id/tv_my_set"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="@color/white"
        android:drawableLeft="@mipmap/icon_set"
        android:drawablePadding="12dp"
        android:drawableRight="@mipmap/icon_right"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:paddingRight="@dimen/dp_13"
        android:text="设置"
        android:textColor="#444444"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />
</android.support.constraint.ConstraintLayout>
