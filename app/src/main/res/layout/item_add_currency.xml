<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    tools:context=".accountPacakage.AddCurrencyActivity">


    <ImageView
        android:id="@+id/iv_seer_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:src="@mipmap/icon_seer_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/seer"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/seer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:text="SEER"
        android:textColor="#ff444444"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/seer_infos"
        app:layout_constraintLeft_toRightOf="@+id/iv_seer_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/seer_infos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="文字介绍"
        android:textColor="#ff444444"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_seer_logo"
        app:layout_constraintTop_toBottomOf="@+id/seer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@mipmap/icon_already_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>